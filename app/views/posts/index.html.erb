<% @posts.each do |post| %>
  <div class="well">
    <h3><%= post.title %></h3>
    <p><%= post.text %></p>
    <%= link_to "Read More", post_path(post), :class => 'btn btn-default' %>
    <%= link_to 'Destroy', post_path(post),
                    method: :delete, 
                    data: { confirm: 'Are you sure?'},
                    :class => 'btn btn-danger' %>


  </div>
<% end %>

