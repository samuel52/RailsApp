<%= form_for :post, url: posts_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field(:title, {:class => 'form-control'}) %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area(:text, {:class => 'form-control'}) %>
  </p>
 
  <p>
    <%= f.submit({:class => 'btn btn-success'}) %>
    <%= link_to 'Back', posts_path, :class => 'btn btn-default' %>
  </p>
<% end %>
