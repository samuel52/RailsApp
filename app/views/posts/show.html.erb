<h2><%= @post.title %></h2>
<p><%= @post.text %></p>
<%= link_to 'Back', posts_path, :class => 'btn btn-default' %>
<%= link_to 'Edit', edit_post_path(@post),({:class => 'btn btn-primary'}) %>
<hr>
<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>
 
  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>
<hr>
<h2>Add a comment:</h2>
<%= render 'form-comment' %>
